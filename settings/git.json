{
  "lazygit-vscode.panels": {
    "sidebar": "hideRestore",
    "panel": "hide"
  },
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": false,
    "yaml": true,
    "haskell": false,
    "typescript": true,
    "javascript": true,
    "latex": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "git.confirmSync": false,
}
